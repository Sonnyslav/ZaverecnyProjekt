@model InsuranceCompany.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<section class="bg-dark py-5">
    <div class="container px-5 my-5 px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <form class="d-flex flex-column gap-4" id="contactForm" asp-route-returnUrl="@ViewData[" ReturnUrl"]">
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Email" type="email" placeholder="email@email.cz" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Vaše heslo..." />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label text-white">Zůstat přihlášen</label>
                    </div>
                    <div class="d-grid"><button class="btn btn-primary btn-lg" type="submit">Přihlásit se</button></div>
                    <a class="btn btn-outline-light btn-lg px-4" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Registrace</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}